<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/story_list_cell_layout_id"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/story_list_cell_image_view_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_profile_pic" />

    <TextView
        android:id="@+id/story_list_cell_title_view_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="This is new kinda"
        android:maxLines="2"
        android:textColor="@color/whiteTitleTextColor"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/story_list_cell_image_view_id"
        app:layout_constraintTop_toTopOf="@+id/story_list_cell_image_view_id" />

    <TextView
        android:id="@+id/story_list_cell_author_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Arthur king"
        android:textColor="@color/whiteDescriptionTextColor"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toEndOf="@+id/story_list_cell_image_view_id"
        app:layout_constraintTop_toBottomOf="@+id/story_list_cell_title_view_id" />

    <TextView
        android:id="@+id/story_list_cell_description_view_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="this is very basic instint of the new article that needs to be written in the consolidated way of this new hierachy policy"
        android:textColor="@color/whiteDescriptionTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/story_list_cell_image_view_id" />

    <ImageView
        android:id="@+id/viewImageCount"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/story_list_cell_view_count_view_id"
        app:layout_constraintStart_toEndOf="@+id/story_list_cell_view_count_view_id"
        app:layout_constraintTop_toTopOf="@+id/story_list_cell_view_count_view_id"
        app:srcCompat="@drawable/white_view" />

    <TextView
        android:id="@+id/story_list_cell_view_count_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="120.4k"
        android:textColor="@color/whiteDescriptionTextColor"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/story_list_cell_image_view_id"
        app:layout_constraintTop_toBottomOf="@+id/story_list_cell_author_view_id" />

</android.support.constraint.ConstraintLayout>